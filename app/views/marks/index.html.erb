<p id="notice"><%= notice %></p>

<h1>Marks</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th style="width: 8%"></th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td>
          <%= link_to fa_icon("pen"), edit_mark_path(mark) %> <%= link_to fa_icon("trash"), mark, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%=link_to mark.name, mark %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mark', new_mark_path, class:"btn btn-moveon" %>
