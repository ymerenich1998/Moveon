<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @mark.name %>
</p>

<%= link_to 'Edit', edit_mark_path(@mark) %> |
<%= link_to 'Back', marks_path %>

<h1>Models</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th style="width: 8%"></th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td>
          <%= link_to fa_icon("pen"), edit_model_path(model) %> <%= link_to fa_icon("trash"), model, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%=link_to model.name, model %></td></tr>
    <% end %>
  </tbody>
</table>
