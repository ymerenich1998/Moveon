<%= simple_form_for @vehicle do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%= f.input :vin %>

<div class="form-group string optional">
  <%= label_tag :mark,"Марка", class:"string optional"%>
  <%= select_tag :mark, options_from_collection_for_select(Mark.all.order(:name),:id,:name),class:"form-control string optional" %>
</div>

<%= f.association :model,label_method: :name, value_method: :id %>

<%= f.input :year %>

<%= f.input :colour %>

<%= f.submit %>
<% end %>
