<p id="notice"><%= notice %></p>

<div class="jumbotron">
 <div class="row text-center text-md-left">
     <div class="col-12 col-md-4 ">
         <img src="https://image.flaticon.com/icons/png/512/26/26435.png" width="256px" height="256px" alt="stack photo" class="img">
     </div>
     <div class=" col-12 col-md-8">
         <div class="container" style="border-bottom:1px solid black">
           <h2><%= @vehicle.model.mark.name %> <%= @vehicle.model.name %> <%= @vehicle.year %></h2>
         </div>
        <br>
         <ul class="container details">
            <li><p><i>Number: </i> <%= @vehicle.number %></p></li>
           <li><p><i>Vin code: </i> <%= @vehicle.vin %></p></li>
           <li><p><i>Color: </i> <%= @vehicle.colour %></p></li>
         </ul>
     </div>
 </div>
<div class="text-center">
  <%= link_to 'Edit', edit_vehicle_path(@vehicle) %> |
  <%= link_to 'Back', vehicles_path %>
</div>
<hr class="lines">
<h1>its Orders</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th style="width: 10%"></th>
      <th>ID</th>
      <th>Worker</th>
      <th>Services</th>
      <th>Customer</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to fa_icon("pen"), edit_order_path(order) %> <%= link_to fa_icon("trash"), order, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%=link_to order.id, order %></td>
        <td><%=link_to order.worker.full_name,order.worker %></td>
        <td><%=render order.services%></td>
        <td><%=link_to order.customer.full_name,order.customer %></td>
        <td><%= order.date %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
