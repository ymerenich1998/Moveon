<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th>Number</th>
      <th>Vin</th>
      <th>Model</th>
      <th>Mark</th>
      <th>Year</th>
      <th>Colour</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%=link_to vehicle.number, vehicle_path(vehicle) %></td>
        <td><%= vehicle.vin %></td>
        <td><%= vehicle.model.name %></td>
        <td><%= vehicle.model.mark.name %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.colour %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, class:"btn btn-moveon" %>
