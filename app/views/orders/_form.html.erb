<%= simple_form_for @order do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%= f.association :worker,label_method: :full_name, value_method: :id %>

<%= f.association :customer,label_method: :full_name, value_method: :id %>

<%= f.association :service,label_method: :name, value_method: :id %>

<%= f.association :vehicle,label_method: :name, value_method: :id %>

<%= f.input :date %>

<%= f.input :status %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
