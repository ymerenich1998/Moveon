<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th>Full name</th>
      <th>Phone</th>
      <th>Desc</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.full_name, customer %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.desc %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class:"btn btn-moveon" %>
