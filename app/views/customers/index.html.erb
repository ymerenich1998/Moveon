<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th style="width: 10%"></th>
      <th>Full name</th>
      <th>Phone</th>
      <th>Desc</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to fa_icon("pen"), edit_customer_path(customer) %> <%= link_to fa_icon("trash"), customer, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%= link_to customer.full_name, customer %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.desc %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class:"btn btn-moveon" %>
