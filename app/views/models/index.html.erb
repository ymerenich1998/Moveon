<p id="notice"><%= notice %></p>

<h1>Models</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th style="width: 10%"></th>
      <th>Name</th>
      <th>Mark</th>
    </tr>
  </thead>
  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td>
          <%= link_to fa_icon("pen"), edit_model_path(model) %> <%= link_to fa_icon("trash"), model, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%=link_to model.name, model %></td>
        <td><%=link_to model.mark.name, model.mark  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Model', new_model_path, class:"btn btn-moveon" %>
