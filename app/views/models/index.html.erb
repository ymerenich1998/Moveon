<p id="notice"><%= notice %></p>

<h1>Models</h1>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Mark</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%=link_to model.name, model %></td>
        <td><%=link_to model.mark.name, model.mark  %></td>
        <td><%= link_to 'Edit', edit_model_path(model) %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Model', new_model_path, class:"btn btn-moveon" %>
